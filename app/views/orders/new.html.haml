= form_for(@order, :remote => true) do |form|

  - if @order.errors.any?
    %ul 
      - @order.errors.full_messages.each do |msg|
        %li= msg
      
  %p
    = form.label :email, "What's your email address?"
    = form.text_field :email
  %p
    = form.label :card_number, "What's your card number?"
    = form.text_field :card_number
  
  %p
    = submit_tag "Place Order"
    or
    = link_to "Cancel", root_url
